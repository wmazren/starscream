<br>
<div class="container">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="users">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Supervisor</th>
        <th>Active</th>
        <th class="td-actions">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.first_name, user_path(user) %></td>
          <td><%= user.last_name %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <% if user.supervisor == nil %>
            <td>-</td>
          <% else %>
            <td><%= user.supervisor.email %></td>
          <% end %>
          <td><%= user.active %></td>
          <td class="td-actions">
            <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to "Create User", new_user_path, :class => 'btn btn-primary' %>
  </div>
</div>

<br>