<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="inputs">
    <%= f.input :username, :required => true, :autofocus => true %>
    <%= f.input :first_name, :required => true %>
    <%= f.input :last_name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :admin, :required => true %>
    <%= f.input :type, :collection => [ "Supervisor" ], :required => true %>
    <%= f.association :supervisor,
                      :collection => @supervisor,
                      :label_method => :first_name,
                      :required => true %>
    <%= f.hidden_field :account_id, :value => current_user.account_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dashboards_path, :class => 'btn' %>
  </div>
<% end %>
