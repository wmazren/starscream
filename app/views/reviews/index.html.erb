<div class="container">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="reviews">
    <thead>
      <tr>
        <% if current_user.admin? %>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <% end %>
        <th>Period</th>
        <th>Status</th>
        <th>Rating</th>
        <th class="td-actions">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <% if current_user.admin? %>
          <td><%= review.user.first_name %></td>
          <td><%= review.user.last_name %></td>
          <td><%= review.user.email %></td>
          <% end %>
          <td><%= review.period.name %></td>
          <td><%= review.state %></td>
          <td><%= review.rating %></td>
          <td class="td-actions">
            <%= link_to "Edit", edit_review_path(review), :class => 'btn btn-mini' %>
            <%= link_to "Show", review_path(review), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

