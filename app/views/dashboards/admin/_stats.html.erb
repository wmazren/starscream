<br>
<div class="row">
  <div class="span12">
    <div class="widget big-stats-container">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>User Quota Balance</h4>
            <span class="value"><%= current_user.account.user_limit %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Days before account expires</h4>
            <span class="value"><%= (current_user.account.expiry_date - current_user.account.renewal_date).to_i - 1 %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Days before review period ends</h4>
            <span class="value"><%= (@period - Date.today).to_i %></span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span12 -->
</div> <!-- /row -->