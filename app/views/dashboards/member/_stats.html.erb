<div class="row">
  <div class="span12">
    <div class="widget big-stats-container">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>New</h4>
            <span class="value"><%= @goals_new %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>In Progress</h4>
            <span class="value"><%= (current_user.account.expiry_date - current_user.account.renewal_date).to_i - 1 %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Completed</h4>
            <span class="value"><%= (@period - Date.today).to_i %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Performance Review End Date</h4>
            <span class="value"><%= (@period - Date.today).to_i %></span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span12 -->
</div> <!-- /row -->