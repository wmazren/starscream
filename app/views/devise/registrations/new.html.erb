<div class="container">
  <div class="account-container">
    <div class="content clearfix">
      <h1>Sign Up</h1>

      <div class="login-fields">
        <div class="field">
          <p>Sign up for a free 45 days free trial</p>

          <% resource.account ||= Account.new %>
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= f.fields_for :account do |account_form| %>
              <%= account_form.input :name, :placeholder => 'Organization Name', :required => true, :autofocus => true, :input_html => { :class => 'login group-field' } %>
              <%= account_form.hidden_field :renewal_date, :value => Date.today %>
              <%= account_form.hidden_field :expiry_date, :value => Date.today + 46.days %>
              <%= account_form.hidden_field :user_limit %>
            <% end %>

            <%= f.input :first_name, :placeholder => 'First Name', :required => true, :input_html => { :class => 'login name-field' } %>
            <%= f.input :last_name, :placeholder => 'Last Name', :required => true, :input_html => { :class => 'login name-field' } %>
            <%= f.input :username, :placeholder => 'User Name', :required => true, :input_html => { :class => 'login username-field' } %>
            <%= f.input :email, :placeholder => 'Email', :required => true, :input_html => { :class => 'login email-field' } %>
            <%= f.input :password, :placeholder => 'Password', :required => true, :input_html => { :class => 'login password-field' } %>
            <%= f.input :password_confirmation, :placeholder => 'Confirm Password', :required => true, :input_html => { :class => 'login password-field' } %>
            <%= f.hidden_field :admin, :value => 1 %>


        </div> <!-- /field -->
      </div> <!-- /login-fields -->
      <div class="login-actions">
              <%= f.button :submit, "Get started", :class => 'button btn btn-warning btn-large' %>
            </div>
          <% end %>
    </div> <!-- /content clearfix -->
  </div> <!-- /account-container -->
</div> <!-- /container -->

